{
  "name": "miles-wang-vue-components",
  "version": "1.0.13",
  "description": "A high-quality Vue 3 component library with TypeScript support",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "build:watch": "vite build --watch",
    "dev": "vite build --watch",
    "prepublishOnly": "npm run build",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "eslint src --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "type-check": "vue-tsc --noEmit",
    "playground": "cd playground && npm run dev",
    "demo": "npm run build && npm run playground",
    "start-demo": "node start-demo.js"
  },
  "keywords": [
    "vue",
    "vue3",
    "component",
    "library",
    "typescript",
    "ui",
    "components",
    "task-card",
    "button",
    "input",
    "modal"
  ],
  "author": {
    "name": "Miles Wang",
    "email": "miles.wang@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/miles-wang/vue-components.git"
  },
  "bugs": {
    "url": "https://github.com/miles-wang/vue-components/issues"
  },
  "homepage": "https://github.com/miles-wang/vue-components#readme",
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "less": "^4.0.0",
    "terser": "^5.44.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "vite-plugin-dts": "^3.0.0",
    "vue": "3.2.25",
    "vue-tsc": "^1.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
